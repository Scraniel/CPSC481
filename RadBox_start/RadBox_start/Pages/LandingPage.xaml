<Page x:Class="RadBox_start.Pages.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      
	Title="LandingPage" d:DesignWidth="1028" d:DesignHeight="635">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height ="7*"/>
            <RowDefinition Height ="2*"/>
            <RowDefinition Height ="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Movies / Shows Button -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <Button x:Name="moviesAndShows" Width="160" Height="160" Click="moviesAndShows_Click" Background="Transparent" BorderBrush="Transparent">
                    <Image x:Name="moviesAndShowsImage" Source="/RadBox_start;component/Assets/Images/StartPage/movies_shows.png"/>
                </Button>
                <Image x:Name="moviesAndShowsLabel" Source="/RadBox_start;component/Assets/Images/StartPage/moviesAndShowsLabel.png" HorizontalAlignment="Left" Width="411"/>
            </StackPanel>

            <!-- Pictures Button -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Button x:Name="picturesButton" Width="160" Height="160" Click="picturesButton_Click" Background="Transparent" BorderBrush="Transparent">
                    <Image x:Name="picturesImage" Source="/RadBox_start;component/Assets/Images/Pictures/photos_filler.png"/>
                </Button>
                <Image x:Name="picturesLabel" Source="/RadBox_start;component/Assets/Images/StartPage/picturesLabel.png" Height="82"/>
                
            </StackPanel>
        </Grid>

        <!-- Power button -->
        <Button x:Name="powerButton" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="91" Height="90" Click="powerButton_Click" Background="Transparent" BorderBrush="Transparent">
            <Image x:Name="powerButtonImage" Source="/RadBox_start;component/Assets/Images/StartPage/powerButton.png"/>
        </Button>
    </Grid>
</Page>
